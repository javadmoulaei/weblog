<% if (blogs.length > 0) { %>
<h2 class="mt-2">آخرین پست ها</h2>
<div class="table-responsive">
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">عنوان</th>
        <th scope="col">تاریخ</th>
        <th scope="col">وضعیت</th>
        <th scope="col">عملیات</th>
      </tr>
    </thead>
    <tbody>
      <% for( let index = 0; index < blogs.length; index++ ) { %>
      <tr>
        <td><%= index+1 %></td>
        <td>
          <a href="/posts/<%= blogs[index]._id %>"></a><%= blogs[index].title %>
        </td>
        <td><%= blogs[index].createdAt %></td>
        <td>
          <span
            class="badge <%= blogs[index].status=== 'عمومی'? 'badge-success' : 'badge-warning'%>"
            ><%= blogs[index].status %></span
          >
        </td>
        <td>data</td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
<% }else { %>
<div class="text-center">
  <h3 class="mt-2">در حال حاضر هیچ پستی نداری</h3>
</div>
<% } %>
